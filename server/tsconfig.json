{
    "compilerOptions": {
        "target": "es6",   
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
