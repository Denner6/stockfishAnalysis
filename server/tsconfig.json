{
    "compilerOptions": {
        "target": "es6",   
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@routes/*": ["routes/*"] 
        },
    },
    "_moduleAliases": {
        "@routes": ["routes/*"]
    },
    "include": [
        "src/*",
        "routes/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
